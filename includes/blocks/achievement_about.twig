{% block general_updates %}
    {% if ( fields ) %}
		<section class="section-achievements">
			<div class="generic-content ct-container mobile-only">
				<h2>{{ fields.title|e('wp_kses_post')|raw }}</h2>
				<!-- link to "more" -->
				<a href="{{ fields.link_address }}" title="{{ fields.link_label|e('wp_kses_post')|raw }}"><span class="icon-chevron-right"></span></a>
			</div>
			<div class="swiper-container mini-swiper">
				<div class="swiper-wrapper">
					<div class="swiper-slide introduction-slide desktop-only">
						<h2>{{ fields.title|e('wp_kses_post')|raw }}</h2>
						<!-- link to "more" -->
						<a href="{{ fields.link_address }}" title="{{ fields.link_label|e('wp_kses_post')|raw }}">{{ fields.link_label|e('wp_kses_post')|raw }}</a>
					</div>
					
					{% if fields.posts %}
						{% for post in fields.posts %}
							
							<div class="swiper-slide">
								<div class="meta">
									<div class="date">{{ post.post_date }}</div>
									<div class="category">TODO 成就</div>
								</div>
								<p class="caption">
									{{ post.post_title }}
								</p>
							</div>							
					
						{% endfor %}
					{% endif %}
				</div>
			<div class="swiper-pagination"></div>
			<div class="swiper-button-next">
				<span class="icon-chevron-right"></span>
			</div>
			<div class="swiper-button-prev">
				<span class="icon-chevron-right"></span>
			</div>
		</div>
	</section>
    {% endif %}
{% endblock %}
