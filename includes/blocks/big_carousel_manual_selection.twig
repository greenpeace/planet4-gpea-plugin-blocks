{% block big_carousel_manual_selection %}
    {% if ( fields ) %}
	<section class="section-featured">
	    <div class="ct-container generic-content">
			<div class="mobile-top-box">
				<h2>{{ fields.title|e('wp_kses_post')|raw }}</h2>
				<p>{{ fields.subtitle|e('wp_kses_post')|raw }}</p>
			</div>
	    </div>
	    <div class="swiper-container maxi-swiper">
		<div class="swiper-wrapper">
			<div class="swiper-slide first">
				<h2>{{ fields.title|e('wp_kses_post')|raw }}</h2>
				<h3>{{ fields.subtitle|e('wp_kses_post')|raw }}</h3>
				<p>{{ fields.paragraph|e('wp_kses_post')|raw }}</p>
			</div>
		    {% if fields.posts %}
			{% for post in fields.posts %}
			    {% if post.is_campaign %}
				<div class="swiper-slide card-petition">
					<div
					class="thumbnail lazy"
					data-bg="url({{ post.img_url }})"
					></div>
					<div class="box">
					<div class="progress-bar">
						<!-- TODO -->
						<div class="percent" style="width: 90%"></div>
					</div>
					<!-- TODO -->
					<p class="stats">已有2,347 名簽署者</p>
					<div class="content">
						<p>{{ post.post_title }}</p>
						<!-- TODO: link to petition page -->
						<a href="#" class="button small light">我要支持</a>
					</div>
					</div>
				</div>
			    {% else %}
				<!-- TODO: link to post -->
				<a href="#" class="swiper-slide card-update">
					<div
					class="thumbnail lazy"
					data-bg="url({{ post.img_url }})"
					></div>
					<div class="info">
					<div class="info-box">
						<div class="meta">
							<!-- TODO: get right issue -->
							<span class="issue oceans">海洋</span>
							<!-- TODO: -->
							<span class="type">新闻</span>
						</div>
						<div class="time">
							<span class="reading-time">
								<!-- TODO: -->
								<span class="icon-clock"></span> 4 min 閱讀
							</span>
							<!-- TODO: -->
							<span class="date">2018-12-07</span>
						</div>
					</div>
					<p>
						{{ post.post_title }}
					</p>
					</div>
				</a>
			    {% endif %}
			{% endfor %}
		    {% endif %}
		</div>
		<div class="swiper-pagination"></div>
		<div class="swiper-button-next">
		    <span class="icon-chevron-right"></span>
		</div>
		<div class="swiper-button-prev">
		    <span class="icon-chevron-right"></span>
		</div>
	    </div>
	</section>
    {% endif %}
{% endblock %}
