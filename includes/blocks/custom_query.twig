{% block custom_query %}
    {% if ( fields ) %}
	<div class="container latte-simple-text-container">
	    <div class="row">
		<div class="col-md-12 col">
		    <p>Categories: {{ fields.categories|e('wp_kses_post')|raw }}</p>
		    <p>Title: {{ fields.title|e('wp_kses_post')|raw }}</p>
		    <p>Description: {{ fields.description|e('wp_kses_post')|raw }}</p>
		    <p>Layout: {{ fields.layout|e('wp_kses_post')|raw }}</p>
		    <ul>
			{% for post in fields.posts %}
			    <li>
				{{ post.post_title }},
				{% for tag in post.tags %}
				    {{ tag.name }},
				{% endfor %}
			    </li>
			{% endfor %}
		    </ul>
		</div>
	    </div>
	</div>
    {% endif %}
{% endblock %}
