{% block steps_set %}
	{% if ( field_groups|length > 0 ) %}
	<section class="section-steps-set">
		<div class="ct-container">
			<div class="title" data-aos="fade-up" data-aos-anchor-placement="top-bottom">
				<h2 class="title__text title__text--pc">{{ static_fields.title | raw }}</h2>
				<p class="title__text title__text--mobile">{{ static_fields.title_mobile | default(static_fields.title) | raw }}</p>
			</div>
			<div class="grid">
				{% for group in field_groups %}
				<div class="grid__box" data-aos="zoom-in-right">
					<div class="grid__inner">
						<div class="lazy grid__image" data-bg="url({{ group.img | e('html_attr') }})"></div>
						<div class="grid__text">
							<h3 class="grid__title">{{ group.title | e }}</h3>
							<div class="grid__desc">
								<p>{{ group.content | raw }}</p>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</section>
	{% endif %}
{% endblock %}
