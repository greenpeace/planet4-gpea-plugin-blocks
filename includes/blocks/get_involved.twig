{% block get_involved %}
	<section class="section-get-involved">
		<div class="ct-container">
			<div class="content content--title">
				<h2 class="title">
					{{ static_fields.title | e }}
				</h2>
			</div>
			<div class="content content--desc content--issue-{{ static_fields.category_slug | e('html_attr') }}">
				<div class="content__inner content__inner--1">
					<p class="category">{{ tanslate_strings.category_label | e }}<span class="category__name">{{ static_fields.category | e }}</span></p>
					<p class="title">{{ static_fields.post_title | raw }}</p>
					<div class="desc">
						<p>{{ static_fields.paragraph | raw }}</p>
					</div>
				</div>
				<div class="content__inner content__inner--2">
					<div class="image">
						<div class="image__inner">
							{% if ( static_fields.img ) %}
							<div class="bg" style="background-image: url({{ static_fields.img | e('html_attr') }})"></div>
							{% endif %}
						</div>
					</div>
				</div>
				<div class="content__inner content__inner--3">
					<div class="buttons">
						<a class="buttons__link buttons__link--primary button btn-primary" href="{{ static_fields.button_url | e('html_attr') }}">{{ static_fields.button_label | default(tanslate_strings.default_button_label) | e }}</a>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}


