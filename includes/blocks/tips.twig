{% block tips %}
	{% if ( fields ) %}
	<section class="section-featured section-featured-tips" id="anchor_tips">
		<div class="ct-container">
			<div class="mobile-top-box">
				<h2>{{ fields.title|e('wp_kses_post')|raw }}</h2>
				<p class="subtitle">{{ fields.subtitle|e('wp_kses_post')|raw }}</p>
			</div>
			<div class="swiper-container maxi-swiper maxi-swiper-tips">
				<div class="swiper-wrapper">
					<div class="swiper-slide first">
						<h2>{{ fields.title|e('wp_kses_post')|raw }}</h2>
						<p class="subtitle">{{ fields.subtitle|e('wp_kses_post')|raw }}</p>
						<p>{{ fields.paragraph|e('wp_kses_post')|raw }}</p>
					</div>
					{% if fields.posts %}
						{% for post in fields.posts %}
							<div class="swiper-slide">
								<div class="tip" style="transform: rotate({{ random(-4, 4) }}deg)">
									<div class="meta-box">
										<div>{{ post.frequency }}</div>
										<!-- TODO: print real issue -->
										<div class="issue {{ post.main_issue_slug }}">{{ post.main_issue }}</div>
									</div>
									<div class="tip-icon"><img src="{{ post.img_url }}" /></div>
									<p>{{ post.post_title|e('wp_kses_post')|raw }}</p>
									<div class="social-box">
										<a href="">
											<span class="icon-facebook"></span>
										</a>
										<a href="">
											<span class="icon-whatsapp"></span>
										</a>
									</div>
								</div>
							</div>
						{% endfor %}
					{% endif %}
				</div>
				<div class="swiper-pagination"></div>
				<div class="swiper-button-next">
					<span class="icon-chevron-right"></span>
				</div>
				<div class="swiper-button-prev">
					<span class="icon-chevron-right"></span>
				</div>
			</div>
			{% if ( fields.see_more_label and fields.see_more_link ) %}
				<p class="see-more">
					<a href="{{ fields.see_more_link }}">{{ fields.see_more_label }}</a>
				</p>
			{% endif %}
		</div>
	</section>
	{% endif %}
{% endblock %}
