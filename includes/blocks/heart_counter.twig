{% block heart_counter %}
	{% if ( fields ) %}
		<section class="section-support-data">
			<div class="support-data-left">
				{% if fields.left_title %}
					<h2>{{ fields.left_title }}</h2>
				{% endif %}
				{% if fields.left_img and fields.left_img_desc %}
					<img src="{{ fields.bg_img }}" alt="{{ fields.left_img_desc }}" />
				{% endif %}
			</div>
			<div class="support-data-right">
				{% if fields.text_above %}
					<h2>{{ fields.text_above }}</h2>
				{% endif %}
				<div class="support-data-heart">
					{% if fields.bg_img %}
						<img src="{{ fields.bg_img }}" alt="" />
					{% endif %}
					{% if fields.number %}
						<p class="caption">
							<span class="support-data-number">{{ fields.number }}</span>
							{% if fields.text_below %}
								{{ fields.text_below }}
							{% endif %}
						</p>
					{% endif %}
				</div>
				{% if fields.link_label and fields.link_url %}
					<p class="see-more">
						<a href="{{ fields.link_url }}">{{ fields.link_label }}</a>
					</p>
				{% endif %}
			</div>
		</section>
	{% endif %}
{% endblock %}
