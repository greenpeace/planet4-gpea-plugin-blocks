{% block launcher %}
	{% if ( fields ) %}

		{% if ( fields.layout == 'dark_theme' ) %}
			{% set classname = 'dark' %}
		{% else %}
			{% set classname = 'light' %}
		{% endif %}

		<section class="section-launcher image-vertical-{{fields.image_vertical_align}} layout-{{classname}}">
			<div class="ct-container">
				{% set classname = fields.img ? '' : 'no-image' %}
				<div class="action fluid {{ classname }}">
					{% if ( fields.title ) %}
						<h2>{{ fields.title|e('wp_kses_post')|raw }}</h2>
					{% endif %}
					{% if ( fields.paragraph ) %}
						<p>{{ fields.paragraph|e('wp_kses_post')|raw }}</p>
					{% endif %}
					{% if ( fields.img ) %}
						<img src="{{ fields.img }}" />
					{% endif %}
					{% if ( fields.btn_label and fields.btn_link ) %}
						<a href="{{ fields.btn_link }}" class="button {{fields.layout=="dark_theme" ? "primary":""}}">{{ fields.btn_label|e('wp_kses_post')|raw }}</a>
					{% endif %}
				</div>
			</div>
		</section>
	{% endif %}
{% endblock %}
