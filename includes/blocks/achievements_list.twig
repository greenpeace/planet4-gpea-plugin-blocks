{% block achievement_section %}
	{% if ( fields ) %}
	<section class="section-updates">
		<div class="ct-container">
			<div class="first">
				<h2><a href="{{ fields.home_url }}/?s&f&f[tag]={{ fields.achievement_tag }}#search_form_inner">{{ fields.title|e('wp_kses_post')|raw }} <span class="icon-chevron-right"></span></a></h2>
				<p>{{ fields.subtitle|e('wp_kses_post')|raw }}</p>
				<img src="{{ fields.bg_img  }}" alt="">
			</div>
			{% if fields.posts %}
				{% set post = fields.posts[0] %}
				<a href="{{ post.link }}" class="card-update force-mobile">
					<div
						class="thumbnail lazy"
						data-bg="url({{ post.img_url }})"
					></div>
					<div class="box">
						<div class="meta-box">
							<div>
								<span class="issue {{ post.main_issue_slug }}">{{ post.main_issue }}</span>
								<span>{{ post.news_type }}</span>
							</div>
							<div>
								{% if post.reading_time %}
									<span> <span class="icon-clock"></span> {{ post.reading_time|e('wp_kses_post')|raw }} </span>
								{% endif %}
								<span>{{ post.post_date|date }}</span>
							</div>
						</div>
						<p>
							{{ post.post_title|e('wp_kses_post')|raw }}
						</p>
					</div>
				</a>

				<div class="posts">
					{% for post in fields.posts %}
						<a href="{{ post.link }}" class="card-update compact">
							<div
								class="thumbnail lazy"
								data-bg="url({{ post.img_url }})"
							></div>
							<div class="box">
								<div class="meta-box">
									<div>
										<span class="issue {{ post.main_issue_slug }}">{{ post.main_issue|raw }}</span>
										<span>{{ post.news_type }}</span>

									</div>
								</div>
								<p>
									{{ post.post_title|e('wp_kses_post')|raw }}
								</p>
								<div class="meta-box">
									<div>
										{% if post.reading_time %}
											<span> <span class="icon-clock"></span> {{ post.reading_time|e('wp_kses_post')|raw }} </span>
										{% endif %}
										<span>{{ post.post_date|date }}</span>
									</div>
								</div>
							</div>
						</a>
					{% endfor %}
				</div>
			{% endif %}
			<div class="mobile-bottom-box">
				<img src="{{ fields.bg_img_mobile }}" alt="">
				<!-- <p class="caption">{{ fields.subtitle|e('wp_kses_post')|raw }}</p> -->
			</div>
		</div>
	</section>
	{% endif %}
{% endblock %}
