{% block slideshow %}
    <!-- TODO Frontend all -->
    {% if ( fields ) %}
        {% if ( fields.layout == 'light' ) %}
            <!-- Light BG, labeled slides -->
            {% set classname = 'light' %}
        {% elseif ( fields.layout == 'dark' ) %}
            <!-- Dark BG, dotted -->
            {% set classname = 'dark' %}
        {% else %}
            <!-- set default or do nothing -->
	    {% set classname = 'some_default' %}
        {% endif %}
        <section class="layout-{{ classname }}">
            {% if fields.title %}
	        <h2>{{ fields.title }}</h2>
	    {% endif %}
            {% if fields.paragraph %}
	        <h2>{{ fields.title }}</h2>
	    {% endif %}
            {% if fields.link_label and fields.link_url %}
	        <a href="{{ fields.link_url }}">{{ fields.link_label }}</a>
	    {% endif %}
	    {% for i in 1..25 %}
	        {% if fields['title_slide_'~i] %}
                    {% if fields['label_slide_'~i] %}
                        <p>{{ fields['label_slide_'~i] }}</p>
	            {% endif %}
                    {% if fields['title_slide_'~i] %}
                        <p>{{ fields['title_slide_'~i] }}</p>
	            {% endif %}
                    {% if fields['subtitle_slide_'~i] %}
                        <p>{{ fields['subtitle_slide_'~i] }}</p>
	            {% endif %}
                    {% if fields['paragraph_slide_'~i] %}
                        <p>{{ fields['paragraph_slide_'~i] }}</p>
	            {% endif %}
                    {% if fields['img_slide_'~i] %}
                        <img src="{{ fields['img_slide_'~i] }}" />
	            {% endif %}
                {% endif %}
            {% endfor %}
        </section>
    {% endif %}
{% endblock %}
