{% block people_list %}
	{% if ( fields ) and ( fields.posts ) %}
		<section class="section-people-list">
			<div class="ct-container">
				<div class="content">
					{% if fields.title %}
						<h2>{{ fields.title }}</h2>
					{% endif %}
					{% if fields.subtitle %}
						<p class="subtitle">{{ fields.subtitle }}</p>
					{% endif %}
				</div>

				<div class="swiper-container mini-swiper">
					<div class="swiper-wrapper">
						{% for post in fields.posts %}
							<div class="swiper-slide card-mini has-profile">
								<div class="profile">
									<img src="{{ post.img_url }}" alt="" />
									<div class="name">{{ post.post_title|e('wp_kses_post')|raw }}</div>
									<div class="position">{{ post.team_code|e('wp_kses_post')|raw }}</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<div class="swiper-button-next">
						<span class="icon-chevron-right"></span>
					</div>
					<div class="swiper-button-prev">
						<span class="icon-chevron-right"></span>
					</div>
				</div>
			</div>
		</section>
	{% endif %}
{% endblock %}
