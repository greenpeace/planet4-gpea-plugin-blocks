{% block article_row %}
	{% if ( fields ) %}
	<section class="section-article-row">
		<div class="ct-container">
			<!-- TODO: add link -->
			<h2><a href="#">{{ fields.title|e('wp_kses_post')|raw }}<span class="icon-chevron-right"></span></a></h2>
			<div class="swiper-container mini-swiper">
				<div class="swiper-wrapper">
					{% for post in fields.posts %}
					{% if ( fields.display_submit_form and loop.index == 3 ) %}
						<div class="swiper-slide card-mini">
							<p>Want to add your story?</p>
							<p><a href="#" class="button">Click here</a></p>
						</div>
					{% endif %}
						<a href="#" class="swiper-slide card-mini">
							{% if post.img_url %}
								<div
									class="thumbnail lazy"
									data-bg="url({{ group.post.img_url }})"
								></div>
							{% endif %}
							<div class="meta-box">
								<div>
									<span>{{ post.post_date }}</span>
								</div>
								<div>
									<!-- TODO: print post type -->
									<span>新聞</span>
								</div>
							</div>
							<p class="caption">{{ post.post_title }}</p>
						</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
	{% endif %}
{% endblock %}
